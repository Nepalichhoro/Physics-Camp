<% include partials/header %>

<div class="container">
<header class="jumbotron">
  <div class="container">
    <h1>  We Love Physics! :) </h1>
    <p> View Bigyan's hand-picked important physics theories and discoveries.</p>
    <p>
        <a class = "btn btn-primary" href="/physicsgrounds/new">Add A New Theory</a>
  </p>
</div>
</header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% physicsgrounds.forEach(function(physicsground){ %>
        <div class ="col-md-3 col-small-6">
          <div class="thumbnail">
              <img src="<%=physicsground.image %>">
              <div class="caption"
              <h4><%= physicsground.name %> </h4>
              </div>
              <p>
                  <a href="/physicsgrounds/<%=physicsground._id %>" class = "btn btn-primary"> More Info </a>
              </p>
          </div>
        </div>
    <% }); %>
     </div>
</div>
<% include partials/footer %>
